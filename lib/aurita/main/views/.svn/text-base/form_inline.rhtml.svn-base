
<% 
  form.enctype  = 'multipart/form-data'
  form.action   = '/aurita/dispatch'
  form.method   = 'POST'
  form.onsubmit = 'Aurita.submit_form(this); return false;' unless form.onsubmit
%>

<div class="form_inline_box">

  <div id="form_content">
    <%= form.string %>
  </div>

  <div class="form_button_bar" id="<%= form.dom_id %>_buttons">
    <%= gui.button(:class => :submit, :type => :button, :icon => :ok, 
                   :onclick => js.Aurita.submit_form(form.dom_id)) { tl(:ok) } %>
    <%= gui.button(:class => :cancel, :icon => :cancel, 
                   :onclick => js.Aurita.cancel_form(form.dom_id)) { tl(:cancel) } %>
  </div>

</div>
