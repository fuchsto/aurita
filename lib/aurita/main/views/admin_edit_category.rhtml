
<h2><%= category.category_name %></h2>
<%= update_form %>

<br />
<div class="form_box">
  <div id="user_category_list">
    <%= category_users %>
  </div>
</div>
<br />

<% category_components.each do |c| %>
  <div class="form_box">
    <%= c.string %>
  </div>
  <br />
<% end %>
</ul>

<div class="form_box">
  <h3><%= tl(:delete_category) %></h3>

  <% form_for(:instance => category, :action => :perform_delete, :id => :delete_category_form) do |f| %>
      <%= 
        gui.button(:icon    => :cancel, 
                   :onclick => "Aurita.submit_form('delete_category_form');") { 
          tl(:delete_category) 
        } 
      %>
  <% end %>

</div>

<div class="form_box">
  <h3><%= tl(:category_versions) %></h3>

  <% form_for(:instance => category, :action => :toggle_versioned, :id => :category_versioned_form) do |f| %>
      <%= if category.versioned then 
          gui.button(:onclick => "Aurita.submit_form('category_versioned_form');", 
                     :icon    => :cancel) { 
            tl(:disable_category_versions) 
          } 
        else 
          gui.button(:onclick => "Aurita.submit_form('category_versioned_form');", 
                     :icon    => :ok) { 
            tl(:enable_category_versions) 
          } 
        end 
      %>
  <% end %>

</div>


