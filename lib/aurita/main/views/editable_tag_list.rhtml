<% cid = content.content_id %>

  <span id="editable_tag_list_<%= cid %>" class="tag_list">
    <%= content.tags %> 
    <nobr>
      <span class="link" onclick="Element.setStyle('tag_input_<%= cid %>',{ visibility: 'visible' });">+</span>
      <span id="tag_input_<%= cid %>" style="visibility: hidden; ">
        <input type="text" class="lore" style="width: 110px;" name="new_tag" id="tag_field_<%= cid %>" />&nbsp;<input type="button" class="lore_button_varwidth" value="ok" onclick="Cuba.load({ element: 'content_tag_list', action: 'Content/add_tag/content_id=<%= cid %>&tag='+$('tag_field_<%= cid %>').value });" />
      </span>
    </nobr>
  </span>
