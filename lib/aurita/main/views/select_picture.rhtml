<% 
   preview_width = 270 if preview_width.to_s == ''
%>

<div>

  <img id="image_<%= element_id %>" src="/aurita/assets/medium/asset_<%= attrib_value %>.jpg" style="width: <%= preview_width %>px; display: <%= if attrib_value then 'block' else 'none'; end %>" />

  <input type="button" class="lore_button" value="Bild w&auml;hlen" 
         onclick="Cuba.select_media_asset({ hidden_field: '<%= element_id %>', 
                                            user_id: <%= Aurita.user.user_group_id %> }); " />
  <input type="button" id="clear_selected_image_button" class="lore_button" value="kein Bild" style="display: none; " 
         onclick="Cuba.select_media_asset_click(0, '<%= element_id %>'); " />


  <input type="hidden" value="<%= attrib_value %>" name="<%= attrib_name %>" id="<%= element_id %>" />

  <div class="media_asset_selection" id="select_box_<%= element_id %>" >
  </div>

</div
