
<div style="background-color: #efefef; ">
  <div style="width: 320px; text-align: center; ">
	   <%= gui.media_asset_thumb(:id => user_profile.picture_asset_id, :size => :medium ) %>
	</div>

  <h2>Daten</h2>
	<div style="padding: 2px; ">
	
    <table class="profile_user_data">

<% if user_profile.email_home.to_s != '' then %>
	    <tr>
	      <td class="profile_left_column" >
	        eMail
	      </td>
	      <td class="profile_right_column">
	        <a href="mailto: <%= user_profile.email_home %>">
            <%= user_profile.email_home %>
          </a>
	      </td>
      </tr>
<% end %>
<% if user_profile.phone_home.to_s != '' then %>
	    <tr>
	      <td class="profile_left_column" >
	        Tel
	      </td>
	      <td class="profile_right_column">
          <%= user_profile.phone_home %>
	      </td>
      </tr>
<% end %>
<% if user_profile.mobile_home.to_s != '' then %>
	    <tr>
	      <td class="profile_left_column" >
	        Mobil
	      </td>
	      <td class="profile_right_column">
          <%= user_profile.mobile_home %>
	      </td>
      </tr>
<% end %>
	    <tr>
	      <td class="profile_left_column" >
	        Begriffe
	      </td>
	      <td class="profile_right_column">
	        <%= user_profile.tags %>
	      </td>
	    </tr>
<% if !last_seen_online.empty? then %>
	    <tr>
	      <td class="profile_left_column" >
	        Zuletzt online am
	      </td>
	      <td class="profile_right_column">
	        <%= gui.datetime(last_seen_online) %>
	      </td>
	    </tr>
<% end %>
<% if user_profile.location.to_s != '' then %>
	    <tr>
	      <td class="profile_left_column" >
	        Ort
	      </td>
        <td class="profile_right_column">
          <%= user_profile.location %>
	      </td>
	    </tr>
<% end %>

	  </table>
	</div>

</div>

